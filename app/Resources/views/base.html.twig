                    <li><a href="{{ path('advert_form') }}">Advertisement form</a></li>
                    <li><a href="{{ path('service') }}">Services</a></li>
                    <li><a href="{{ path('all_comments') }}">Comments</a></li>
                    <li><a href="{{ path('categories') }}">Categories</a></li>
                </ul>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
